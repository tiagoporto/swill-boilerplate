fieldset
    margin: 0
    rhythm-borders(1px, 1, $base-font-size, solid lighten(#000, 60%))
    trailer(1)

$input
    adjust-font-size-to($base-font-size)
    rhythm-borders(1px, .25, $base-font-size, solid lighten(#000, 60%))
    border-radius: 5px
    color: lighten(#000, 35%)
    width: 100%
    trailer(.5)

    &:focus
        border-color: #66afe9
        outline: 0
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)

input[type="text"]
input[type="search"]
input[type="email"]
input[type="number"]
input[type="password"]
select
    @extend $input
    height: em($base-line-height / 2 * 3)

    // &:read-only,
    // &:disabled
    //  background lighten(#000, 95%)

select
    width: auto

::placeholder
    color: lighten(#000, 55%)
    font-size: em($base-font-size - 2)

textarea
    @extend $input

$basicButton
    adjust-font-size-to($base-font-size - 2)
    border: none
    border-radius: 5px
    display: inline-block
    padding: 0 em(20px)
    overflow: hidden
    margin: 0
    text-align: center
    text-decoration: none
    text-transform: uppercase
    user-select: none
    vertical-align: bottom
    -webkit-tap-highlight-color: transparent
    box-shadow: 0 1px 2px rgba(0, 0, 0, .1), 0 1px 2px rgba(0, 0, 0, 0.1)
    color: #fff
    background-color: #3FAA96
    transition: .15s ease-out
    cursor: pointer

    // &:focus
    //  outline none
    //  box-shadow 0 0 4px aqua

button,
input[type="button"]
input[type="reset"]
input[type="submit"]
    @extend $basicButton

    &:hover:not([disabled])
        background-color: #2bbbad
        box-shadow: 0 1px 4px rgba(0, 0, 0, .15), 0 1px 4px rgba(0, 0, 0, .15)

    // &:active

    &:disabled
        @extend $basicButton
        background-color: #DFDFDF
        color: #9F9F9F
        cursor: default
